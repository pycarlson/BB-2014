<h2>Adoptor Details</h2>

<table class="datatable table table-striped table-scrollable table-bordered" id="manage-donors">
<thead>
<tr>
  <th><h2>User ID</h2></th>
  <th><h2>Name</h2></th>
  <th><h2>Email</h2></th>
  <th><h2>Street</h2></th>
  <th><h2>City</h2></th>
  <th><h2>State</h2></th>
  <th><h2>Zip</h2></th>
  <th><h2>Phone</h2></th>
  <th><h2>Company</h2></th>
  <th><h2>Resend Email</h2></th>
</tr>
</thead>
<% @adoptors.each do |a| %>
<tr>
  <ul>
    <td>
      <li><%= a.id %></li>
    </td>
    <td>
      <li><%= a.full_name %></li>
    </td>
    <td>
      <li><%= a.email %></li>
    </td>
    <td>
      <li><%= a.street %></li>
    </td>
    <td>
      <li><%= a.city %></li>
    </td>
    <td>
      <li><%= a.state%></li>
    </td>
    <td>
      <li><%= a.zip %></li>
    </td>
    <td>
      <li><%= a.phone %></li>
    </td>
    <td>
      <li><%= a.company %></li>
    </td>
    <td><%= link_to "Resend", resend_adoption_confirmation_email_path(a), :class => "btn btn-primary" %></td>
    <% end %>
  </ul>
</tr>

</table>