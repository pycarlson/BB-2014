
<div class="col-xs-1"></div>
<div class="profile-container">
  <h1>Hello <%= @donor.first_name %>.</h1>
  <p>Welcome to your Brighter Beginnings Adopt-a-Family profile page. Come here to manage your personal information, acquire information about the famil(ies) you will be adopting this year, and even to remind yourself about when and where you've scheduled your gift drop off.</p>

  <% if @donor  %>
  <ul>
    <li><h2>Your Adopted Families</h2></li>
    <% @donor.families.each do |f| %>
    <li>
      <ul>
        <li><p><%= f.code %></p></li>
      </ul>
      <% end %>
    </li>
  </li>
</ul>
<% end %>


<% if @donor  %>
<ul>
  <li><h2>Your Drop Location Details</h2></li>
  <li>
    <ul>
      <li><p><%= DropLocation.find(@donor.drop_location_id).name %></p></li>
      <li><p><%= DropLocation.find(@donor.drop_location_id).street %>, <%= DropLocation.find(@donor.drop_location_id).city %>, <%= DropLocation.find(@donor.drop_location_id).zipcode %></p></li>
      <li><p><%= @donor.drop_date.date_and_time.strftime('%B %d, %Y at %l:%M %p') %></p></li>
    </ul>
  </li>
</ul>
<% end %>


<% if @donor  %>
<ul>
  <li><h2>Your Personal Info</h2></li>
  <li>
    <ul>
      <li><p>Name: <%= @donor.first_name %> <%= @donor.last_name %><p></li>
      <li><p>Address: <%= @donor.street %>, <%= @donor.city %>, <%= @donor.zipcode %>, <%= @donor.state %></p></li>
      <li><p>Phone: <%= @donor.phone %></p></li>
      <li><%= link_to 'Edit Your Info', edit_donor_path(@donor.id) %></li>
      <% end %>
    </ul>
  </li>
</ul>
</div>
