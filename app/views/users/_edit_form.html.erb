<%= form_for @user, :html => {:class => "form form-horizontal"} do |f| %>

  <div class="row">  
    
    <div class="form-group col-lg-3 col-md-3 col-sm-6 col-xs-12">    
      <div class="form-item"><%= f.label :full_name %>
        <%= f.text_field :full_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group col-lg-3 col-md-3 col-sm-6 col-xs-12">  
      <div class="form-item"><%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group col-lg-3 col-md-3 col-sm-6 col-xs-12">   
      <div class="form-item"><%= f.label :street %>
        <%= f.text_field :street, class: "form-control" %>
      </div>
    </div>

    <div class="form-group col-lg-3 col-md-3 col-sm-6 col-xs-12">   
      <div class="form-item"><%= f.label :city %>
        <%= f.text_field :city, class: "form-control" %>
      </div>
    </div>

    <div class="form-group col-lg-3 col-md-3 col-sm-6 col-xs-12">     
      <div class="form-item"><%= f.label :state %>
        <%= f.text_field :state, class: "form-control" %>
      </div>
    </div>

    <div class="form-group col-lg-3 col-md-3 col-sm-6 col-xs-12">   
      <div class="form-item"><%= f.label :zipcode %>
        <%= f.text_field :zip, class: "form-control" %>
      </div>
    </div>

    <div class="form-group col-lg-3 col-md-3 col-sm-6 col-xs-12">   
      <div class="form-item"><%= f.label :phone %>
        <%= f.text_field :phone, class: "form-control" %>
      </div>
    </div>

    <div class="form-group col-lg-3 col-md-3 col-sm-6 col-xs-12">   
      <div class="form-item"><%= f.label :company %>
        <%= f.text_field :company, class: "form-control" %>
      </div>
    </div>

    <% unless current_user.drop_location_id == 0 || !user_has_chosen_drop_location %>
      <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="form-item">
        <%= f.select(:drop_date_id, @drop_dates.collect {|dd| [dd.date_and_time.strftime('%B %d, %Y at %l:%M %p'), dd.id]}) %>
        </div>
      </div>
    <% end %>

    <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="form-item">
        <%= f.submit 'Add or Update', class: "btn btn-success" %>
        <%= link_to 'Go Back', user_path(@user), class: "btn btn-info" %>
      </div>
    </div> 

  <% end %>

</div>

