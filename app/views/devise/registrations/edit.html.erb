<%= render "layouts/errors" %>

<div class="form-page col-lg-12">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form form-horizontal"}, html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">  

    <div class="form-group col-lg-4">   
      <div class="form-item"><%= f.label :email %><br />
        <%= f.email_field :email, required: :true, class: "form-control", autofocus: true %>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="form-group col-lg-4">   
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="form-item">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>

    <div class="clearfix"></div>

    <div class="form-group col-lg-4">   
      <div class="form-item"><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, required: :true, class: "form-control", autocomplete: "off" %>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="form-group col-lg-4">   
      <div class="form-item"><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, required: :true, class: "form-control", autocomplete: "off" %>
      </div>
    </div>

    <div class="clearfix"></div>

    <div class="form-group col-lg-4">   
      <div class="form-item"><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, required: :true, class: "form-control", autocomplete: "off" %>
      </div>
    </div>

    <div class="clearfix"></div>

    <div><%= f.submit "Update Password", :class => "btn btn-success" %></div>
    <% end %>

    <div><%= link_to "Cancel", user_path(current_user), :class => "btn btn-danger" %></div>
    

  </div>
</div>

