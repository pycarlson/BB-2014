  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10 org-form">
      <%= form_for @organization, :html => {:class => "form form-horizontal"} do |f| %>
      <div class="form-horizontal">
        <div class="form-group col-lg-6">
          <%= f.label :agency_name %><br>
          <%= f.text_field :name, class: "form-control col-lg-6" %>
        </div>
        <div class="form-group col-lg-12">
          <%= f.label :description %><br>
          <%= f.text_area :blurb, :rows => 6, class: "form-control" %>
        </div>

        <div class="form-group float-right col-lg-4 col-md-6 col-sm-12">
          <%= f.label :email %><br>
          <%= f.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group float-right col-lg-4 col-md-6 col-sm-12">
          <%= f.label :phone %><br>
          <%= f.text_field :phone, class: "form-control" %>
        </div>

        <div class="form-group float-right col-lg-4 col-md-6 col-sm-12">
          <%= f.label :address %><br>
          <%= f.text_field :address, class: "form-control" %>
        </div>

        <div class="form-group  float-right col-lg-4 col-md-6 col-sm-12">
          <%= f.label :zipcode %><br>
          <%= f.text_field :zip, class: "form-control" %>
        </div>

        <div class="form-group float-right col-lg-4 col-md-6 col-sm-12">
          <%= f.label :website_url %><br>
          <%= f.text_field :website_url, class: "form-control" %>
        </div>

      </div>
      <div class="form-group float-right col-lg-4 col-md-6 col-sm-12">
      <%= f.submit class: "btn btn-danger org-submit-button" %>
      </div>

      <% end %>
    </div>
  </div>

