<%= form_for @organization, :html => {:class => "form"} do |f| %>
<div class="form-horizontal">

  <div class="row">
    <div class="form-group col-lg-6">
      <div class="form-item">
      <%= f.label :agency_name %><br>
      <%= f.text_field :name, required: :true, class: "form-control col-lg-6" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-lg-12">
      <div class="form-item">
      <%= f.label :description %><br>
      <%= f.text_area :blurb, required: :true, :rows => 6, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group float-right col-lg-4 col-md-6 col-sm-12">
      <div class="form-item">
      <%= f.label :email %><br>
      <%= f.email_field :email, required: :true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group float-right col-lg-4 col-md-6 col-sm-12">
      <div class="form-item">
      <%= f.label :phone %><br>
      <%= f.telephone_field :phone, required: :true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group float-right col-lg-4 col-md-6 col-sm-12">
      <div class="form-item">
      <%= f.label :address %><br>
      <%= f.text_field :address, required: :true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group  float-right col-lg-4 col-md-6 col-sm-12">
      <div class="form-item">
      <%= f.label :zipcode %><br>
      <%= f.text_field :zip, required: :true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group float-right col-lg-4 col-md-6 col-sm-12">
      <div class="form-item">
      <%= f.label :website_url %><br>
      <%= f.url_field :website_url, required: :true, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-lg-12 col-md-12 col-sm-12">
      <div class="form-item">
      <%= f.submit class: "btn btn-success" %>
      </div>
    </div>
  </div>

<% end %>
<div class="spacer" style="height: 160px;"></div>
