<!DOCTYPE html>
<html>
<head>
  <%= render 'layouts/meta_tags' %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <link href="http://fonts.googleapis.com/css?family=Dancing+Script:700|EB+Garamond" rel="stylesheet" type="text/css" />

  <link href="http://fonts.googleapis.com/css?family=Roboto|Roboto+Condensed|Alegreya:500" rel="stylesheet" type="text/css" />
  
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
  <%= javascript_include_tag :defaults, "nested_form" %>
  <%= javascript_include_tag :defaults %>
</head>
<body data-no-turbolink="true">

  <%= render 'shared/top_nav'%>
  <div class="container-fluid site-container">

    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>
    
  </div>

  
</body>
</html>
