
<%= nested_form_for @family, :html => {:class => "form form-inline"} do |f| %>

<div class="form-inline">

  <div class="form-group col-xs-12">
    <%= f.select(:drive_id, @drives.reverse.collect {|d| [d.year, d.id]}) %>
  </div>

  <div class="form-group col-xs-12">
    <%= f.select(:drop_location_id, @drop_locations.collect {|dl| [dl.name, dl.id]}) %>
  </div>

  <div class="form-group col-xs-12">
    <%= f.label :family_code %><br>
    <%= f.text_field :code, class: "form-control" %>
  </div>

  <h2>Add Family Members Here</h2>

  <%= f.fields_for :family_members do |fm| %>
  
  <div class="form-group col-xs-12">
    <%= fm.label :first_name %><br>
    <%= fm.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group col-xs-12">
    <%= fm.label :age %><br>
    <%= fm.text_field :age, class: "form-control" %>
  </div>

  <div class="form-group col-xs-12">
    <%= fm.label :gender %><br>
    <%= fm.select :gender, options_for_select([['male'], ['female']], :selected => :gender), class: "form-control" %>
  </div>

  <div class="form-group col-xs-12">
    <%= fm.label :bio %>
      <%= fm.text_area :bio, size: "24x6", class: "form-control", required: :true %>
  </div>

  <div class="form-group col-xs-12">
    <%= fm.label :pant_size %><br>
    <%= fm.text_field :size_pants, class: "form-control" %>
  </div>

  <div class="form-group col-xs-12">
    <%= fm.label :shirt_size %><br>
    <%= fm.text_field :size_shirt, class: "form-control" %>
  </div>

  <div class="form-group col-xs-12">
    <%= fm.label :dress_size %><br>
    <%= fm.text_field :size_dress, class: "form-control" %>
  </div>

  <div class="form-group col-xs-12">
    <%= fm.label :shoe_size %><br>
    <%= fm.text_field :size_shoes, class: "form-control" %>
  </div>

  <%= fm.fields_for :needs do |n| %>
    <div>
      <%= n.label :need %>
      <%= n.text_field :item %>
      <%= n.link_to_remove "Remove this need" %><br>
    </div>

  <%  end %>

  <%= fm.link_to_add "Add Need", :needs %>
  <%  end %>


    <%= f.link_to_add "Add Another Family Member", :family_members %>

</div>
<%= f.submit class: "btn btn-primary" %>

<% end %>

</div>
