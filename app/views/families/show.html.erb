<%= render 'shared/sub_nav' %>

  <div class="family-copy">
    <% if family_has_been_adopted?(@family) %>
    <p>This family was adopted by <%= User.find(@family.user_id).full_name %></p>
    <% end %>
  </div>

  <div class="col-lg-12 adoptable-family">
    <h2>The <%= @family.code %> Family</h2>
    <% @family.family_members.each do |fm| %>
    <div class="col-lg-4 col-sm-6 family-members">
      <li>
        <ul>
          <li><%= fm.first_name %></li>
          <li><%= fm.bio %></li>
        </ul>
        <br>
      </li>
    </div>
    <% end %>
    <div class="family-copy">
    <% if !family_has_been_adopted?(@family) %>
    <%= link_to "GO BACK", families_path, :class => "btn btn-primary" %>
    <%= link_to "ADOPT THIS FAMILY!", adoption_confirmation_path(:family_id => @family.id), :class => "btn btn-danger" %>
    <% end %>
  </div>


