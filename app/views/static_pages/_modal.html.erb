<div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
        <h4 class="modal-title" id="myModalLabel">We have families from (?) locations. Please choose which location you would like to adopt a family from.</h4>
      </div>
      <div class="modal-body">
        <h3>Available Locations</h3>
        <ul>
        <% @drop_locations.each do |dl| %>
        
        <li><%= dl.name %></li>
        <li><%= dl.street %></li>
        <li><%= dl.city %></li>
        <li><%= dl.state %></li>
        <li><%= dl.zipcode %></li>
        <li><%= button_to "Choose Location", add_location_path(:drop_location_id => dl.id), :method => :post %></li>  
        <br>
        <% end %>
      </ul>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
